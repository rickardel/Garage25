@model IEnumerable<GoaGaraget.Models.Receipt>

@{
    ViewBag.Title = "Index";
}
@section Styles{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css">
}
@section scripts{
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#parkedVehicleTable').DataTable();
        });
    </script>
}
<h2>Receipts</h2>

<table id="parkedVehicleTable" class="table table-striped table-bordered" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParkedVehicle.RegNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckinAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckoutAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.ParkedVehicle.RegNumber)</strong>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckinAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckoutAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
